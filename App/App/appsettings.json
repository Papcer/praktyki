{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "MongoDB": {
    "ConnectionURL": "mongodb://root:root@mymongodb:27017",
    "DatabaseName": "Events"
  },

  "GotenbergSharpClient": {
    "ServiceUrl": "http://mygotenberg:3000",
    "HealthCheckUrl": "http://mygotenberg:3000/health",
    "RetryPolicy": {
      "Enabled": true,
      "RetryCount": 4,
      "BackoffPower": 1.5,
      "LoggingEnabled": true
    }
  }
}
